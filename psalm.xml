<?xml version="1.0" encoding="UTF-8"?>
<psalm
    errorLevel="3"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedBaselineEntry="true"
    findUnusedCode="true"
    checkForThrowsDocblock="false"
    findUnusedPsalmSuppress="true"
    ensureArrayStringOffsetsExist="true"
    ensureArrayIntOffsetsExist="true"
    sealAllMethods="true"
    sealAllProperties="true"
    allowStringToStandInForClass="true"
>
    <projectFiles>
        <directory name="./app" useStrictTypes="true"/>
        <directory name="./bootstrap" useStrictTypes="true"/>
        <directory name="./config" useStrictTypes="true"/>
        <directory name="./database" useStrictTypes="true"/>
        <directory name="./routes" useStrictTypes="true"/>
        <directory name="./tests" useStrictTypes="true"/>
        <ignoreFiles>
            <directory name="./doc"/>
            <directory name="./public"/>
            <directory name="./recources"/>
            <directory name="./storage"/>
            <directory name="./tests/output"/>
            <directory name="./tests/Feature/data"/>
            <directory name="./vendor"/>
        </ignoreFiles>
    </projectFiles>
    <plugins>
        <pluginClass class="Psalm\PhpUnitPlugin\Plugin"/>
    </plugins>
</psalm>
