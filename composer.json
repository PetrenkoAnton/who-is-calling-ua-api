{
    "name": "petrenkoanton/who-is-calling-ua-api",
    "description": "Who is calling UA API",
    "keywords": ["lumen", "api", "parser", "calls"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^8.3",
        "guzzlehttp/guzzle": "^7.8",
        "illuminate/redis": "^10.35",
        "imangazaliev/didom": "^2.0",
        "laravel/lumen-framework": "^10.0",
        "petrenkoanton/php-collection": "^1.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "lctrs/psalm-psr-container-plugin": "^1.10",
        "mockery/mockery": "^1.4.4",
        "php-coveralls/php-coveralls": "^2.7",
        "phpunit/phpunit": "^10.0",
        "psalm/plugin-phpunit": "^0.18.4",
        "ramsey/coding-standard": "^2.1",
        "squizlabs/php_codesniffer": "^3.8",
        "vimeo/psalm": "^5.16"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "check-all": [
            "composer install",
            "@test",
            "@psalm",
            "@phpcs"
        ],
        "test": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-text",
        "psalm": "./vendor/bin/psalm",
        "phpcs": "./vendor/bin/phpcs -v"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
